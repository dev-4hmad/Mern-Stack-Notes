<% layout("/layouts/boilerplate") %>
<body>
  <h3>All listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <%for (let listing of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col">
  <img src="<%= (listing.image && listing.image.url) ? listing.image.url : 'https://via.placeholder.com/800x400?text=No+Image' %>" class="card-img-top" alt="img" style="height:20rem; object-fit:cover;" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <%= listing.title %> <br />
          Rs.<%= listing.price %> / night
        </p>
      </div>
    </div>
    </a>
    <%}%>
  </div>
</body>
