<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing details</h3>
  </div>
  <div class="card col-6 offset-3 show-card" style="width: 18rem">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing img error"
    />
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b><br />
        <%= listing.description %> <br />
        Rs.<%= listing.price %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </p>
    </div>
  </div>
  <div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-success col-2 offset-3">Edit</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=Delete">
      <button class="btn btn-danger offset-5">Delete</button>
    </form>
  </div>
</div>
