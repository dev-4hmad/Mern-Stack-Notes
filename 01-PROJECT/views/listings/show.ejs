<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card" style="width: 30rem">
    <% /* show image - listing.image is an object {filename, url} */ %>
    <img
      src="<%= (listing.image && listing.image.url) ? listing.image.url : 'https://via.placeholder.com/800x400?text=No+Image' %>"
      class="card-img-top show-img"
      alt="listing img"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %> <br />
        Rs.<%= listing.price %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </p>
      <div class="btns">
        <a href="/listings/<%= listing._id%>/edit" class="btn btn-success col-2"
          >Edit</a
        >
        <form method="POST" action="/listings/<%=listing._id%>?_method=Delete">
          <button class="btn btn-danger offset-5">Delete</button>
        </form>
      </div>
      <hr />
      <div class="col-8 offset-1 mb-3">
        <h4>Leave a review</h4>
        <form
          action="/listings/<%= listing.id %>/reviews"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="range"
              min="1"
              max="5"
              id="rating"
              name="review[rating]"
              class="form-range"
            />
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id="comment"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">
              Please add some comments for review
            </div>
          </div>
          <button class="btn btn-outline-dark mt-3">Submit</button>
        </form>
        <hr />
        <p><b>All reviews</b></p>
        <div class="row">
          <% for(review of listing.reviews){ %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">Jon doe</h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating %>‚≠ê</p>
            </div>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mb-3"><button class="btn btn-sm btn-dark">Delete</button></form>
          </div>
          <%}%>
        </div>
      </div>
    </div>
  </div>
</div>